# include <iostream.h>

using namespace std ;

int main () {
	
	float nota1 , nota2 , nota3 , nota4 ;
	
	cout << "primera nota do aluno : >>> ";
	cin >> nota1  ;
	cout <<"segunda nota do aluno : >>> " ;
	cin >> nota2 ;
	cout <<"terseira nota do aluno : >>>" ;
	cin >> nota3;
	cout <<"quarta nota do aluno : >>> " ;
	cin >> nota4;
	
	float soma = nota1 + nota2 + nota3 + nota4 ;
	soma = (soma / 4);
	
	cout << "amedia do aluno Ã© " << soma << endl ;
	
	if (soma >= 7){
		cout << "o aluno pasou de ano" ;
	}
	else {
		cout <<"o aluno foi reprovado" ;
	}
}
	  
